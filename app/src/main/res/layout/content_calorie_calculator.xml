<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/linear_layout_height"
    android:fillViewport="true"
    tools:context="com.example.dami.anif.CalorieCalculatorActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/linear_layout_height"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/linear_layout_height"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/name_text_view"
                    android:textSize="22dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/linear_layout_height"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/linear_layout_height"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Sex" />

                <Spinner
                    android:id="@+id/sex_spinner"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/linear_layout_height"
                    android:layout_weight="1"
                    android:textAlignment="center" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/linear_layout_height"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/linear_layout_height"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Age" />

                <EditText
                    android:id="@+id/age_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/linear_layout_height"
                    android:layout_weight="1"
                    android:hint="Age"
                    android:inputType="numberDecimal"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/linear_layout_height"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/linear_layout_height"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Height [cm]" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/linear_layout_height"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Weight [Kg]" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/linear_layout_height"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/height_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/linear_layout_height"
                    android:layout_weight="1"
                    android:hint="[cm]"
                    android:inputType="numberDecimal"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/weight_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/linear_layout_height"
                    android:layout_weight="1"
                    android:hint="[Kg]"
                    android:inputType="numberDecimal"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/linear_layout_height"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/linear_layout_height"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Activity"
                    android:textSize="22dp" />

                <Spinner
                    android:id="@+id/activity_spinner"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/linear_layout_height"
                    android:layout_weight="1"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/linear_layout_height"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/linear_layout_height"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Formula"
                    android:textSize="22dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/linear_layout_height"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/formula_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/harris_benedict"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Harris Benedict" />

                    <RadioButton
                        android:id="@+id/mifflin_st_jeor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="Mifflin St-Jeor" />

                    <RadioButton
                        android:id="@+id/katch_mc_cardle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Katch McCardle" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/linear_layout_height"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/linear_layout_height"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="I want to ..."
                    android:textSize="22dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/linear_layout_height"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">


                <RadioGroup
                    android:id="@+id/weight_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/weight_lose_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="lose" />

                    <RadioButton
                        android:id="@+id/weight_be_healthy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="maintain" />

                    <RadioButton
                        android:id="@+id/weight_gain_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="gain" />
                </RadioGroup>


            </LinearLayout>

            <EditText
                android:id="@+id/weight_difference_edit_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/linear_layout_height"
                android:layout_marginTop="8dp"
                android:hint="[Kg/Week]"
                android:inputType="numberDecimal"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/linear_layout_height"
                android:layout_marginTop="@dimen/linear_layout_height"
                android:gravity="center"
                android:text="BMR"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/bmr_kcl_text_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/linear_layout_height"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="0 [Kcl]"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/kcl_text_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/linear_layout_height"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="0 [Kcl]"
                android:textSize="22dp" />

            <Button
                android:id="@+id/button_calorie_calculator_activity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/linear_layout_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"

                android:text="@string/confirm_button" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>